root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 2
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

ij_markdown_wrap_text_if_long = false

[*.py]
indent_size = 4

[*.{md,mkd,markdown}]
trim_trailing_whitespace = false

[*.xml]
indent_style = tab
